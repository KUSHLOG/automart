{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint Check",
      "type": "shell",
      "command": "npm run lint",
      "problemMatcher": ["$eslint-stylish"],
      "group": "test"
    },
    {
      "label": "Prettier Check",
      "type": "shell",
      "command": "npm run prettier:check",
      "group": "test"
    },
    {
      "label": "Fix Prettier Issues",
      "type": "shell",
      "command": "npm run prettier",
      "group": "test"
    },
    {
      "label": "Prettier Recheck",
      "type": "shell",
      "command": "npm run prettier:check",
      "group": "test"
    },
    {
      "label": "TypeScript Check",
      "type": "shell",
      "command": "npm run type-check",
      "problemMatcher": ["$tsc"],
      "group": "test"
    },
    {
      "label": "Unit Tests",
      "type": "shell",
      "command": "npm test",
      "problemMatcher": [],
